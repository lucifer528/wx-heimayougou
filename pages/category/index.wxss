page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  display: flex;
  height: calc(100vh - 90rpx);
}
.cates .cates_container .left_menu {
  flex: 2;
  font-size: 1.3em;
  text-align: center;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
  text-align: center;
}
.cates .cates_container .right_content .list_title {
  font-size: 1.5em;
  height: 80rpx;
}
.cates .cates_container .right_content .list_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .list_container {
  padding-top: 30rpx;
}
.cates .cates_container .right_content .list_container .list_content {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .list_container .list_content .list_item {
  width: 33%;
  padding: 10rpx;
  text-align: center;
}
