page {
  background-color: #edeced;
}
.user_info_wrap {
  background-color: var(--themeColor);
  overflow: hidden;
  width: 100%;
  height: 45vh;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  z-index: 10;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -65%);
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 40rpx;
  color: white;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translateX(-50%);
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 2em;
  padding: 20rpx 2em;
  border-radius: 5%;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #666;
}
.user_content .user_main .history_wrap {
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .orders_wrap {
  margin: 20rpx 0;
  background-color: #fff;
}
.user_content .user_main .orders_wrap .orders_title {
  text-indent: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .orders_content {
  background-color: #fff;
  display: flex;
  padding: 20rpx;
}
.user_content .user_main .orders_wrap .orders_content navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .orders_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 50rpx;
}
.user_content .user_main .address_wrap {
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 20rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .app_info_wrap .app_info_item:last-child {
  border: none;
}
.user_content .user_main .recommend_wrap {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff;
}
